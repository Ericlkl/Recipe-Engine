{
  "name": "recipe-engine",
  "version": "1.0.0",
  "description": "A Web application to search recipe for fruit.",
  "main": "index.js",
  "scripts": {
    "project-install": "npm i && npm run client-install && npm run client-build && npm run server-install && npm run server-build",
    "client": "npm run start --prefix client",
    "client-install": "npm install --prefix client",
    "client-build": "npm run build --prefix client",
